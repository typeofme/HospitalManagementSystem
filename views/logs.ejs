<div class="container-fluid">
  <div class="row mb-4">
    <div class="col-12">
      <div class="card bg-primary text-white">
        <div class="card-body">
          <h1 class="card-title mb-0">
            <i class="fas fa-clipboard-list me-2"></i>Activity Logs
          </h1>
          <p class="card-text mt-2">
            Track all product updates, edits, and deletions in the system.
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header bg-info text-white">
          <h3 class="card-title mb-0">
            <i class="fas fa-history me-2"></i>Logs
          </h3>
        </div>
        <div class="card-body">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>User</th>
                <th>Action</th>
                <th>Entity</th>
                <th>Description</th>
                <th>Date</th>
              </tr>
            </thead>
            <tbody>
              <% if (logs && logs.length > 0) { %>
                <% logs.forEach(function(log, idx) { %>
                  <tr>
                    <td><%= idx + 1 %></td>
                    <td><%= log.first_name ? log.first_name + ' ' + log.last_name : '-' %></td>
                    <td><%= log.action %></td>
                    <td><%= log.entity %></td>
                    <td><%= log.description %></td>
                    <td><%= log.created_at.toLocaleString ? log.created_at.toLocaleString() : log.created_at %></td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr><td colspan="6" class="text-center">No logs found.</td></tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
